<h3>Administrators</h3>
<%= render 'administrators/form' %>
<div id="table_border">
<table>
  <thead>
    <tr>
      <th style="width: 50%">User</th>
      <th></th>
      <th>Created</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @administrators.each do |administrator| %>
      <tr>
        <td><%= User.find(administrator.user_id) %></td>
        <td></td>
        <td><%= administrator.created_at.strftime("%m/%d/%Y") %></td>
        <td></td>
        <td></td>
        <td style='text-align: right'>
          <%= link_to 'Destroy', administrator, confirm: 'Are you sure?', method: :delete %>
        </td>
      </tr>
    <% end %>
  </tbody>   
</table> 
</div>