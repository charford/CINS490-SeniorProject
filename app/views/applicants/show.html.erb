<p id="notice"><%= notice %></p>
<div class="full_width_content">
  <%= render 'pages/tabs' %>
    <div class="fwc_body">
      <div class="applicant_left">
      <%= render 'general_info.html.erb' %>
      <%= render "average_rating" %>
    </div>
    <div class="applicant_right">
      <div class="container">
        <%= render 'survey_responses' %>
      </div>
      <div class="container">
        <%= render 'references' %>
      </div>
      <% if !has_rated_applicant?(@applicant) %>
      <div class="container">
        <%= render 'ratings/rate_applicant' %>
      </div>
      <% end %>
      <% if has_rated_applicant?(@applicant) %>
      <div class="container">
        <%= render 'ratings' %>      
      </div>
      <% end %>
    </div>
  </div>
</div>