<%= render 'pages/side_nav' %>
<div class="content_with_nav">
<p id="notice"><%= notice %></p>

<p>
  <b>First Name:</b>
  <%= @user.firstname %>
</p>
<p>
  <b>Last Name:</b>
  <%= @user.lastname %>
</p>
<p>
  <b>Email:</b>
  <%= @user.email %>
</p>

<p>
	<b>Jobs applied for:</b>
  <ul>
	<% @user.jobs.each do |job| %>
    <li><%= link_to job.position, edit_job_applicant_path(job,Applicant.find_by_user_id(@user.id)) %>, <%= time_ago_in_words(get_application_date @user, job.id) %> ago<br />Status: <%= get_app_status %></li>
  <% end %>
  </ul>
</p>


<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
</div>