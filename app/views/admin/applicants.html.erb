<p id="notice"><%= notice %></p>
<div class="full_width_content">
  <h1>Administration</h1>
  <%= render 'pages/admin_tabs' %>
  <div class="fwc_body">
  	<h3>Applicants</h3>
  	 <table>
      <thead>
        <tr>
          <th>User</th>
          <th>Position</th>
          <th>Created on</th>
          <th>Last Updated</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @applicants.each do |applicant| %>
          <tr>
            <td><%= User.find(applicant.user_id) %></td>
            <td><%= Job.find(applicant.job_id).position %></td>
            <td><%= applicant.created_at.strftime("%m/%d/%Y") %></td>
            <td><%= time_ago_in_words applicant.updated_at %> ago</td>
            <td></td>
            <td style='text-align: right'><%= link_to_destroy_applicant applicant %></td>
          </tr>
        <% end %>
      </tbody>   
    </table>
  </div>
</div>