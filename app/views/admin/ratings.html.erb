<div class="full_width_content">
  <h1>Administration</h1>
  <%= render 'pages/admin_tabs' %>
  <div class="fwc_body">
  	<h3>Ratings</h3>
    <div id="table_border">
  	<table>
      <thead>
        <tr>
          <th>Applicant</th>
          <th>Evaluator</th>
          <th>Position</th>
          <th>Rating / 5</th>
          <th>Created on</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @ratings.each do |rating| %>
          <tr>
            <td><%= User.find(Applicant.find(rating.applicant_id).user_id) %></td>
            <td><%= User.find(rating.evaluator_id) %></td>
            <td><%= rating.rating %></td>
            <td><%= Applicant.find(rating.applicant_id).job.position %></td>
            <td><%= rating.created_at.strftime("%m/%d/%Y") %></td>
            <td></td>
            <td style='text-align: right'>
            <%= link_to_destroy_rating rating %>
            </td>
          </tr>
        <% end %>
      </tbody>   
    </table> 
  </div>
 </div>

</div>