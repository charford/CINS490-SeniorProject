<h1>Listing applicants</h1>
<p id="notice"><%= notice %></p>

<table>
  <tr>
    <th>User</th>
    <th>Job</th>
    <th>Applied</th>
    <th>Rating</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @applicants.each do |applicant| %>
  <tr>
    <td><%= applicant.user_id %></td>
    <td><%= applicant.job_id %></td>
    <td><%= applicant.created_at %></td>
    <td><%= get_applicant_rating(applicant) %></td>
    <td><%= link_to 'Show', job_applicant_path(@job,applicant) %></td>
    <td><%= link_to 'Edit', edit_job_applicant_path(@job,applicant) %></td>
    <td><%= link_to 'Destroy', job_applicant_path(@job,applicant), confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

