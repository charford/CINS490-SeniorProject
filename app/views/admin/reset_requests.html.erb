<div class="full_width_content">
  <h1>Administration</h1>
  <%= render 'pages/admin_tabs' %>
  <div class="fwc_body">
    <h3>Reset Requests</h3>
    <div id="table_border">
    <table>
      <thead>
        <tr>
          <th>User</th>
          <th>Created at</th>
          <th>Request hash</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= link_to request.user, request.user %></td>
        <td><%= time_ago_in_words(request.created_at) %> ago</td>
        <td><%= request.request_hash %></td>
        <td style='text-align: right'>      
          <%= link_to 'Destroy', request, confirm: 'Performing this action will remove all related data, including job applications that belong to this user. Are you sure?', method: :delete %>
        </td>
      </tr>
    <% end %>
    </tbody>   
    </table> 
  </div>
 </div>
</div>