<script language="javascript" type="text/javascript">
  function showHide(elementId) {
    if (document.getElementById) {
      var element = document.getElementById(elementId);
      if (element.style.visibility == 'hidden') {
        element.style.visibility = 'visible';
      } else if (element.style.visibility == 'visible') {
        element.style.visibility = 'hidden';
      }
  }
}
</script>
<div class="full_width_content">
  <%= render 'pages/tabs' %>
    <div class="fwc_body">
      <div class="applicant_left">
      <%= render 'general_info.html.erb' %>
      <% if has_rated_applicant?(@applicant) %>
        <%= render "average_rating" %>
      <% end %>
    </div>
    <div class="applicant_right">
      <div class="container">
        <%= render 'survey_responses' %>
      </div>
      <div class="container">
        <%= render 'references' %>
      </div>
      <div class="container">
        <%= render 'additional_facts' %>
      </div>
      <div class="container">
        <% if !has_rated_applicant?(@applicant) %>
          <%= render 'ratings/rate_applicant' %>
        <% else %>
          <%= render 'ratings' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
