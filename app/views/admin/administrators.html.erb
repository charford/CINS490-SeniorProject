<p id="notice"><%= notice %></p>
<div class="full_width_content">
  <h1>Administration</h1>
  <%= render 'pages/admin_tabs' %>
  <div class="fwc_body">
    <h3>Administrators</h3>
    <table>
      <thead>
        <tr>
          <th>User</th>
          <th></th>
          <th>Created</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @administrators.each do |administrator| %>
          <tr>
            <td><%= User.find(administrator.user_id) %></td>
            <td></td>
            <td><%= administrator.created_at.strftime("%m/%d/%Y") %></td>
            <td></td>
            <td></td>
            <td style='text-align: right'>
              <%= link_to 'Destroy', administrator, confirm: 'Are you sure?', method: :delete %>
            </td>
          </tr>
        <% end %>
      </tbody>   
    </table> 
    <h3>Add Administrator</h3>
    <%= render 'administrators/form' %>
  </div>
</div>